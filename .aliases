# These are my system wide aliases"

# start with ls
# park the original ls to lso
# this is the convention I follow. o indicates old
alias lso='ls'
alias ls='exa'
alias ll='ls -la --icons'
alias l='ls -l --icons'

# vim. I use newovim
#alias vim='nvim'
#alias v='nvim'
alias vn='~/Downloads/nvim.appimage'
alias vim='vn'
alias v='vn'

# cat is a bat
alias cato='/usr/bin/cat'
alias cat='bat'

# let git be g
alias g='git'

# finally I exit with e
alias e='exit'

alias python='python3'
